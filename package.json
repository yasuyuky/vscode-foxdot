{
  "name": "vscode-foxdot",
  "displayName": "foxdot",
  "description": "Extension for FoxDot",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.41.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:foxdot.start",
    "onCommand:foxdot.restart"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "foxdot.start",
        "title": "Start FoxDot"
      },
      {
        "command": "foxdot.stop",
        "title": "Stop FoxDot"
      },
      {
        "command": "foxdot.restart",
        "title": "Restart FoxDot"
      },
      {
        "command": "foxdot.sendSelection",
        "title": "Send Region to FoxDot"
      }
    ],
    "keybindings": [
      {
        "key": "cmd+shift+enter",
        "command": "foxdot.sendSelection"
      }
    ],
    "configuration": [
      {
        "title": "FoxDot Configuration",
        "properties": {
          "foxdot.pythonPath": {
            "type": [
              "string",
              "null"
            ],
            "default": null
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^3.3.1",
    "vscode": "^1.1.28",
    "tslint": "^5.12.1",
    "@types/node": "^10.12.21",
    "@types/mocha": "^2.2.42"
  }
}
