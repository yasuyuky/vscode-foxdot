{
  "name": "vscode-foxdot",
  "displayName": "FoxDot",
  "publisher": "yasuyuky",
  "description": "Extension for FoxDot",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.41.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "images/vscode-foxdot.png",
  "activationEvents": [
    "onCommand:foxdot.start",
    "onCommand:foxdot.restart"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yasuyuky/vscode-foxdot"
  },
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "foxdot.start",
        "title": "FoxDot: Start"
      },
      {
        "command": "foxdot.stop",
        "title": "FoxDot: Stop"
      },
      {
        "command": "foxdot.restart",
        "title": "FoxDot: Restart"
      },
      {
        "command": "foxdot.record",
        "title": "FoxDot: Record"
      },
      {
        "command": "foxdot.stopRecording",
        "title": "FoxDot: Stop Recording"
      },
      {
        "command": "foxdot.sendSelections",
        "title": "FoxDot: Send Selection"
      }
    ],
    "keybindings": [
      {
        "key": "cmd+shift+enter",
        "command": "foxdot.sendSelections"
      }
    ],
    "configuration": [
      {
        "title": "FoxDot",
        "properties": {
          "foxdot.pythonPath": {
            "type": "string",
            "default": null,
            "description": "Python Path with FoxDot installed"
          },
          "foxdot.feedbackStyle": {
            "type": "string",
            "default": "outputChannel",
            "enum": [
              "outputChannel",
              "infomationMessage"
            ],
            "enumDescriptions": [
              "Use output channel to feedback FoxDot output",
              "Use infomation message to feedback FoxDot output"
            ],
            "description": "Feedback style of FoxDot output"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^3.3.1",
    "vscode": "^1.1.28",
    "tslint": "^5.12.1",
    "@types/node": "^10.12.21",
    "@types/mocha": "^2.2.42"
  }
}
